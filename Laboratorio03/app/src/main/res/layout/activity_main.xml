<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cant_textView"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="@string/cantidad_de_dinero"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cont_mony_textView"
        style="@style/TextAppearance.MaterialComponents.Headline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/count_money"
        app:layout_constraintEnd_toEndOf="@+id/cant_textView"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/cant_textView"
        app:layout_constraintTop_toBottomOf="@+id/cant_textView" />

    <ImageView
        android:id="@+id/fiveCent_ImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/tenCent_imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont_mony_textView"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/tenCent_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fiveCent_ImageView"
        app:layout_constraintTop_toTopOf="@+id/fiveCent_ImageView"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/oneDollar_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/one_dollar" />

    <ImageView
        android:id="@+id/quarterDollar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/quarter" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/five_cent"
        app:layout_constraintEnd_toEndOf="@+id/fiveCent_ImageView"
        app:layout_constraintStart_toStartOf="@+id/fiveCent_ImageView"
        app:layout_constraintTop_toBottomOf="@+id/fiveCent_ImageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/ten_cent"
        app:layout_constraintEnd_toEndOf="@+id/tenCent_imageView"
        app:layout_constraintStart_toStartOf="@+id/tenCent_imageView"
        app:layout_constraintTop_toBottomOf="@+id/tenCent_imageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/cuarter_dollar"
        app:layout_constraintEnd_toEndOf="@+id/quarterDollar"
        app:layout_constraintStart_toStartOf="@+id/quarterDollar"
        app:layout_constraintTop_toBottomOf="@+id/quarterDollar" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/one_dollar"
        app:layout_constraintEnd_toEndOf="@+id/oneDollar_imageView"
        app:layout_constraintStart_toStartOf="@+id/oneDollar_imageView"
        app:layout_constraintTop_toBottomOf="@+id/oneDollar_imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>